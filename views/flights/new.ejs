<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/forms.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">

    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" id="airline-input">

    <label for="airport-input">Airport:</label>
    <input type="text" name="airport" id="airport-input">

    <label for="flight-number">Flight Number:</label>
    <input type="text" name="flightNo" id="flight-number">
    
    <label for="departure-date">Departure Date:</label>
    <input type="datetime-local" name="flightNo" id="flight-number">

    <button type="submit">Add Movie</button>
  </form>
</main>

